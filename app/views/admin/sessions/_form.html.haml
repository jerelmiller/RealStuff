= form_tag admin_sessions_path do
  - if flash[:error]  
    .login-error
      = image_tag 'Exclamation.png'
      - flash.each do |key, msg|  
        &nbsp;
        %span.message= msg
  .input
    = label_tag :email
    %br
    = text_field_tag :email, params[:email]
  .input
    = label_tag :password
    %br
    = password_field_tag :password
  .submit
    = submit_tag "Log In"