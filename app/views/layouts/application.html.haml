    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Schoolbell'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Coming Soon'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Walter Turncoat'
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    -#.header
